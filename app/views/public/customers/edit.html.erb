<h1>会員情報編集</h1>
<table>
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <tr>
    <td>氏名</td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>

  <tr>
    <td>フリガナ</td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>

  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :post_code %></td>
  </tr>

  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number %></td>
  </tr>

  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email %></td>
  </tr>

  <tr>
    <td><%= f.submit "編集内容を保存" %></td>
    <td><%= link_to "退会する", customers_unsubscribe_path %></td>
  </tr>

  <% end %>
</table>