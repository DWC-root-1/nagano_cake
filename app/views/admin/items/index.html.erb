<h2>商品一覧</h2>
<%= link_to '+', new_admin_item_path %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= genre_id.name %></td>
      <td><%= item.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<!-- 1ページ毎の表示数は10個のため、kaminariでページを分ける -->
